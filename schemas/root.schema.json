{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://chaosinitiative.com/assetbuilder/schema/root.schema.json",

    "title": "Configuration",
    "description": "Root AssetBuilder configuration",

    "type": "object",
    "required": ["options", "assets", "subsystems"],
    "properties": {
        "options": {
            "title": "Options",
            "description": "Global configuration options",

            "type": "object",
            "required": ["project"],
            "properties": {
                "project": {
                    "description": "The project namespace for your game or mod.",
                    "type": "string"
                },
                "bin_appid": {
                    "description": "The AppID of the app to source binaries from.",
                    "type": "integer"
                }
            }
        },
        "assets": {
            "title": "Assets",
            "description": "Array of asset build entries.",

            "type": "array",
            "items": { "$ref": "#/definitions/asset" }
        },
        "subsystems": {
            "title": "Subsystems",
            "description": "Key-value dictionary of subsystem instances to run.",

            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/subsystem"
            }
        }
    },

    "definitions": {
        "asset": {
            "title": "Asset",
            "description": "An entry instructing which asset(s) to build.",

            "type": "object",
            "required": ["type", "files"],
            "properties": {
                "type": {
                    "title": "Type",
                    "description": "The type of the asset.",
                    "type": "string"
                },
                "src": {
                    "title": "Source Folder",
                    "description": "The asset source folder.",

                    "type": "string",
                    "default": "$(path.content)",
                    "examples": ["$(path.content)"]
                },
                "dest": {
                    "title": "Destination Folder",
                    "description": "The asset destination folder.",

                    "type": "string",
                    "default": "$(path.game)",
                    "examples": ["$(path.game)"]
                },
                "files": {
                    "title": "Files",
                    "description": "A pattern or array of patterns describing what assets to build.",

                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": { "type": "string" }
                        }
                    ],

                    "examples": ["p2ce/resource/closecaption_*.txt"]
                },
                "options": {
                    "title": "Options",
                    "description": "Options to pass to the driver.",

                    "type": "object",
                    "additionalProperties": true,
                    
                    "default": null,
                    "examples": [{"foobar": 1234}]
                }
            }
        },
        "subsystem": {
            "title": "Subsystem",
            "description": "An entry to run a specific subsystem.",

            "type": "object",
            "required": ["module", "categories"],
            "properties": {
                "module": {
                    "title": "Module",
                    "description": "The Python module to load.",

                    "type": "string",
                    "examples": ["assetbuilder.subsystems.buildsys"]
                },
                "categories": {
                    "title": "Categories",
                    "description": "The categories this subsystem should run for.",

                    "type": "array",
                    "examples": ["code"],
                    "items": { "type": "string" }
                },
                "build_types": {
                    "title": "Build Types",
                    "description": "The build types this subsystem should run for.",

                    "type": "array",
                    "default": null,
                    "examples": [["staging", "release"]],
                    "items": {
                        "type": "string",
                        "enum": ["trunk", "staging", "release"]
                    }
                },
                "options": {
                    "title": "Options",
                    "description": "Options to pass to the subsystem.",

                    "type": "object",
                    "additionalProperties": true,
                    "default": null,
                    "examples": [{"foobar": 1234}]
                }
            }
        }
    }
}