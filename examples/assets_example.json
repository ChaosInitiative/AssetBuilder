{
    "defaults": {
        "project": "mymod"
    },
    "assets": [
        {
            "type": "caption",
            "src": "$(path.game)",
            "files": "$(path.project)/resource/closecaption_*.txt"
        },
        {
            "type": "model",
            "files": "$(path.project)/models/**/*.mc"
        },
        {
            "type": "vice",
            "src": "$(path.game)",
            "options": {
                "key": "blahblah"
            },
            "files": [
                "mymod/cfg/cpu_level_*.kv",
                "mymod/cfg/gpu_level_*.kv",
                "mymod/cfg/gpu_mem_level_*.kv",
                "mymod/cfg/mem_level_*.kv"
            ]
        }
    ],
    "subsystems": {
        "fgdbuild": {
            "module": "assetbuilder.subsystems.fgdbuild",
            "category": "assets",
            "options": {
                "gamedir": "mymod",
                "branch": "P2CE",
                "source": "$(path.content)/P2CE-FGD",
                "dest": "$(path.game)"
            }
        },
        "vpk": {
            "module": "assetbuilder.subsystems.vpk",
            "@condition": "R('args.build_type') != 'trunk'",
            "options": {
                "packfiles": [
                    {
                        "prefix": "pak01",
                        "folder": "$(path.project)",
                        "include": [
                            "cfg/config_default.cfg",
                            "cfg/moddefaults*.txt",
                            "cfg/modsettings.cfg",
                            "cfg/mounts.kv",
                            "cfg/*.ekv",
                            "expressions/**/*",
                            "maps/**/*",
                            "materials/**/*",
                            "models/**/*",
                            "panorama/**/*",
                            "particles/**/*",
                            "resource/**/*",
                            "scenes/**/*",
                            "scripts/**/*",
                            "sound/**/*"
                        ],
                        "exclude": [
                            "*.ain"
                        ]
                    },
                    {
                        "prefix": "pak01",
                        "folder": "platform",
                        "include": ["*"],
                        "exclude": [
                            "config/**/*",
                            "resource/**/*",
                            "shaders/**/*"
                        ]
                    },
                    {
                        "prefix": "pak01",
                        "folder": "hammer",
                        "include": ["*"]
                    }
                ]
            }
        }
    }
}